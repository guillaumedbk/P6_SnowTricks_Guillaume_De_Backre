{% extends 'base.html.twig' %}

{% block body %}
    <div class="container container-form">
        <h1 class="text-center text-uppercase text-warning fs-2">Réinitialisation</h1>
        <p class="text-center mt-3">
            Veuillez entrer votre adresse mail. <br> Nous vous enverrons en un lien pour réinitialiser votre mot de passe !
        </p>
        {{ form_start(ResetPasswordForm, {'attr': {'class': 'form bg-light m-2 p-4 rounded-3'}}) }}
        {{ form_row(ResetPasswordForm.email) }}
        <button type="submit" class="btn btn-warning btn-form">Envoyer</button>
        {{ form_end(ResetPasswordForm) }}
    </div>
{% endblock %}