{% extends 'base.html.twig' %}

{% block body %}
    {% if trick %}
        <div class="container d-flex justify-content-center">
            <div class="my-trick-container">

                <div class="trick-title">
                    <h1 class="text-center">{{ trick.title }}</h1>
                </div>

                <div class="see-media">
                    <button type="button" class="btn btn-lg btn-outline-warning">See medias</button>
                </div>

                <section class="display-medias">
                    <div class="medias-images">
                        {% if pictures %}
                            {% for picture in pictures %}
                                {% if picture.trick.id is same as id %}
                                    <div class="tricks-images m-2">
                                        <img controls width="145" src={{ picture.url }} alt="{{ trick.title }}" class="object-fit-cover">
                                    </div>
                                {% endif %}
                            {% endfor %}
                        {% endif %}
                    </div>

                    <div class="medias-videos">
                        {% if videos %}
                            {% for video in videos %}
                                {% if video.trick.id is same as id %}
                                    <div class="tricks-images m-2">
                                        <video controls width="145" height="96">
                                            <source src={{ video.url }}>
                                            Sorry, your browser doesn't support embedded videos.
                                        </video>
                                    </div>
                                {% endif %}
                            {% endfor %}
                        {% endif %}
                    </div>
                </section>

                <section class="description-section mt-5">
                    <div class="description-content">
                        <h2>Description de la figure</h2>
                        {{ trick.description }}
                    </div>
                    <div class="info-complementaire">
                        <div class="info-une">
                            <p class="text-secondary"><em>Publié le: {{ publishAt }}</em>
                        </div>
                        <div class="info-deux">
                            <p class="text-secondary"><em>Dernière modification:</em></p>
                        </div>
                        <div class="info-trois">
                            <p class="text-secondary"><em>Niveau:</em></p>
                        </div>
                        <div class="info-trois">
                            <p class="text-secondary"><em>Groupe:</em></p>
                        </div>
                    </div>
                </section>

                {% if chats %}
                <section class="espace-discussion mt-5">
                        <h2>Espace de discussion:</h2>

                        <ul class="w-100 d-flex list-unstyled flex-wrap">
                            {% for chat in chats %}
                            <li class="w-100 d-flex align-items-center">
                                <div class="discussion-bubble">
                                    <div class="image-bubble m-0 d-flex align-items-center">
                                        {% for user in users %}
                                            {% if user.id is same as chat.user.id %}
                                                <p class="m-0 text-uppercase">{{ user.firstname|slice(0, 1) }}.{{ user.name|slice(0, 1) }}</p>
                                            {% endif %}
                                        {% endfor %}
                                    </div>

                                    <div class="chat-content image-bubble">
                                        <p class="m-0">{{ chat.content }}</p>
                                    </div>

                                </div>
                                <div>
                                   <p class="mb-0 text-secondary fst-italic">publié le {{ chat.publishAt|date('d-m-Y') }} à {{ chat.publishAt|date('H:i') }}</p>
                                </div>
                            </li>
                            {% endfor %}
                        </ul>
                </section>
                {% endif %}
            </div>
        </div>
    {% endif %}
{% endblock %}